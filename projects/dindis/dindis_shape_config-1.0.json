{
    "title": "Dindis geojson",
    "type": "object",
    "required": ["type", "features"],
    "properties": {
        "type": {
            "const": "FeatureCollection"
        },
        "features": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["type", "geometry", "properties"],
                "properties": {
                    "type": {
                        "const": "Feature"
                    },
                    "geometry": {
                        "type": "object",
                        "required": ["type", "coordinates"],
                        "properties": {
                            "type": {
                                "const": "Point"
                            },
                            "coordinates": {
                                "type": "array",
                                "minItems": 2,
                                "maxItems": 2,
                                "items": { "type": "number" }
                            }
                        },
                        "additionalProperties": false
                    },
                    "properties": {
                        "type": "object",
                        "required": ["transect", "section"],
                        "properties": {
                            "transect": { "type": "integer", "title": "Transecte" },
                            "section": { "type": "integer", "title": "Secci√≥" }
                        },
                        "additionalProperties": false
                    }
                },
                "additionalProperties": false
            }
        }
    },
    "additionalProperties": false
}